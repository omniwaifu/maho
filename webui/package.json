{
  "name": "maho-webui",
  "version": "1.0.0",
  "description": "Maho Web UI",
  "private": true,
  "scripts": {
    "dev": "bun run --watch tailwind:watch",
    "build": "bun run tailwind:build",
    "tailwind:build": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "tailwind:watch": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.7"
  },
  "dependencies": {
    "alpinejs": "^3.14.0"
  }
} 